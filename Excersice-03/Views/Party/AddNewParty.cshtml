
@model PartyModel

<div class="container">
    <h2 class="text-center">@(ViewBag.isEdit?"Edit Party":"Add New Party")</h2>
    @if (ViewBag.isSuccess == 1)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Party @ViewBag.partyName added sucessfully.</strong>
        </div>
    }
    else if (ViewBag.isSuccess == 2)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            This <strong>Party</strong> is already Exist.
        </div>
    }<br />
    <form method="post" enctype="multipart/form-data" asp-controller="Party" asp-action="@(ViewBag.isEdit?"EditParty":"AddNewParty")">
        <div class="form-group row justify-content-center">
            <label asp-for="PartyName" class="col-sm-2 col-form-label">Party Name :</label>
            <input asp-for="PartyName" class="form-control col-sm-4" />
            <span asp-validation-for="PartyName" class="text-danger"></span>
        </div><br />

        <div class="form-group text-center">
            <input type="submit" class="btn btn-success" value="@(ViewBag.isEdit?"Update":"Save")" />
            <a asp-controller="Party" asp-action="GetAllParty" class="btn btnCancel">Cancel</a>
        </div>
    </form>
</div>